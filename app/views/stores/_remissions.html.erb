<h1>Remisiones:</h1>
<hr>
  <div class="col-md-8">
    <table id="products" class="table table-striped table-bordered" cellspacing="0" width=auto>
      <thead>
        <tr>
          <th>#</th>
          <th>Fecha</th>
          <th>Piezas</th>
          <th>Activa</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @remissions.each do |remission| %>
        <tr>
          <td><%= remission.id %></td>
          <td><%= remission.created_at.strftime("%H-%I-%G") %></td>
          <td><%= remission.units.count %></td>
          <td><%= remission.active_in_words %></td>
          <td><%= link_to remission do%>
                <span class="glyphicon glyphicon-edit"></span>
              <% end %>
            <% unless remission.active %>
             |<%= link_to remission, method: :delete,
                                     data: { confirm: "Eliminar de la Base de Datos. Todas las piezas de regresaran a la bodega esten marcadas como vendidas o no." }  do %>
                                  <span class="glyphicon glyphicon-trash"></span>
                                <% end %>
            <% end %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
