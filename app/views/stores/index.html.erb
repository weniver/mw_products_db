<h1>Tiendas:</h1>
<hr>

<table id="products" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Existencias</th>
      <th>+ Vendido</th>
      <th>- Vendido</th>
      <th>$ Total</th>
      <th>$ Ultima Remisión</th>
      <th>$ Ultimo Año</th>
      <th><span class="glyphicon glyphicon-pencil"></span>|<span class="glyphicon glyphicon-trash"></span></th>
    </tr>
  </thead>
  <tbody>
  <% @stores.each do |store| %>
    <tr>
      <td><%= link_to store.name, store %></td>
      <td>100</td>
      <td>Perritos Blancos</td>
      <td>Tortas de Tamal</td>
      <td>$100</td>
      <td>$12</td>
      <td>$6/23</td>
      <td><%= link_to edit_store_path(store) do%>
       <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      |<%= link_to store, method: :delete,
                     data: { confirm: "Eliminar Tienda de la Base de Datos junto con todos sus registros." }  do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %></td>
    </tr>
  <% end %>
  </tbody>
</table>
