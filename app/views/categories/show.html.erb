<h1 id="product_name_show"><%= @category.product.name %> |<span id="category_name_show"> <%= @category.name %> (<%= @category.units.count %>)</span></h1>
<hr>

<table id="products" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Estampado: color</th>
      <th>Tela</th>
      <th>Precio de Venta</th>
      <th>Ubicaci√≥n</th>
      <th><span class="glyphicon glyphicon-pencil"></span>&#160|&#160<span class="glyphicon glyphicon-trash"></span></th>
    </tr>
  </thead>
  <tbody>
  <% @units.each do |unit| %>
    <tr>
      <td><%= unit.product_code %></td>
      <td><%= unit.pattern.name %>: <%= unit.color.real_color %></td>
      <td><%= unit.fabric.material %> <%= unit.fabric.color.capitalize %></td>
      <td><%= unit.sold_price_or_na %></td>
      <td><%= unit.where_is_it %></td>
      <td><%= link_to edit_unit_path(unit) do%>
       <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      |<%= link_to unit, method: :delete,
                     data: { confirm: "Eliminar de la Base de Datos" }  do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %></td>
    </tr>
  <% end %>
  </tbody>
</table>
