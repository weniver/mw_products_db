<h1 id="product_name_show"><%= @category.product.name %> <span id="category_name_show"><%= @category.name %></span></h1>
<hr>

<table id="products" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Categoria</th>
      <th>Estampado: color</th>
      <th>Tela</th>
      <th>¿Vendido?</th>
      <th>Ubicación</th>
    </tr>
  </thead>
  <tbody>
  <% @units.each do |unit| %>
    <tr>
      <td><%= unit.category.product.name %></td>
      <td><%= unit.category.name %></td>
      <td><%= unit.print_style %>: <%= unit.ink_color %></td>
      <td><%= unit.fabric.material.capitalize %>: <%= unit.fabric.color %></td>
      <td><%= unit.sold_yes_or_no %><%= unit.sold_price %></td>
      <td><%= unit.where_is_it %></td>
    </tr>
  <% end %>
  </tbody>
</table>
