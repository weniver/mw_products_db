<div class="center jumbotron">
  <%= link_to image_tag("mamawolf_logo_grande.png", alt: "Mama Wolf Logo"), 'https://www.facebook.com/mamawolfmx/?fref=ts' %></br>
  <% if !current_user.nil? && current_user.admin? %>
    <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary", id: "btn-home"%>
  <% end %>

  <% if logged_in? %>
    <p>
      <%= say_hello %>
    </p>
  <% else %>
    <p>
      Necesitas iniciar sesión para utilizar esta página.
    </p>
  <% end %>

</div>
